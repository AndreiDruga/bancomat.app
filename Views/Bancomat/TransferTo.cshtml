<div class="bancomat-app-index-container">
    <div class="bancomat-app-index-buttons">
        <p class="text-center">Amount to Transfer</p>
        <input type="text" class="form-control" id="newSold" aria-label="Amount To Transfer">
        <p class="text-center">Email to Transfer</p>
        <input type="text" class="form-control" id="email" aria-label="email">
        <a class="btn btn-primary" onclick="transferAmount()" role="button">Transfer</a>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index" role="button">Back</a>
        <span id="error" class=" text-center"></span>
    </div>
</div>

<script type="text/javascript">
    function transferAmount() {
        const dataBody = { amount: parseInt(document.getElementById("newSold").value), email: toString(document.getElementById("email").value) }

        $.ajax({
            url: '@Url.Action("TransferTo", "Bancomat")',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            type: "POST",
            dataType: "json",
            data: JSON.stringify(dataBody),
            success: function () {
                console.log("success");
            }
        });
        
    }
</script>

