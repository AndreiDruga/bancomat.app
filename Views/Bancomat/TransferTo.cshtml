<div class="bancomat-app-index-container">
    <div class="bancomat-app-index-buttons">
        <p class="text-center">Ammount to Transfer</p>
        <input type="text" class="form-control" id="newSold" aria-label="Amount (to the nearest dollar)">
        <p class="text-center">User id to Transfer</p>
        <input type="text" class="form-control" id="userId" aria-label="Email">
        <p class="text-center">Transfer details</p>
        <input type="text" class="form-control" id="details" aria-label="Details">
        <button class="btn btn-primary" onclick="transferTo()" role="button">Transfer</button>
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index" role="button">Back</a>
        <span id="error" class=" text-center"></span>
    </div>
</div>


<script type="text/javascript">
    function transferTo() {
        const dataBody = { amount: parseInt(document.getElementById("newSold").value), userId:document.getElementById("userId").value, details: (document.getElementById("details").value) };

        $.ajax({
            url: '@Url.Action("TransferTo", "Bancomat")',
            headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
            },
            type: "POST",
            dataType: "json",
            data: JSON.stringify(dataBody),
            success: function () {
                console.log("success");
            }
        });
        
    }
</script>